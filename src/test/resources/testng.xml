<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Mobilex Suite" parallel="methods" thread-count="1" data-provider-thread-count="1">
    <listeners>
        <listener class-name="com.framework.listeners.AppiumSuiteListener"/>
        <listener class-name="com.framework.listeners.AllureTestListener"/>
        <listener class-name="com.framework.listeners.RetryTransformer"/>
        <listener class-name="com.framework.listeners.TestInfoListener"/>
    </listeners>

    <test name="Mobile Tests">
        <classes>
            <class name="com.framework.tests.LoginTest"/>
            <class name="com.framework.tests.ProductsTest"/>
        </classes>
    </test>
</suite>
